<?xml version='1.0' encoding='utf-8'?>
<widget id="org.openenergymonitor.cydynni" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cyd Ynni</name>
    <description>
        Cyd Ynni app to show hydro status
    </description>
    <author email="david@inferiorplanet.co.uk" href="http://lab.megni.co.uk/cydynni/">
        David Hunnisett
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="http://lab.megni.co.uk/cydynni/*"/>
    <allow-navigation href="http://lab.megni.co.uk/*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon src="images/icon/android-icon-36x36.png" density="ldpi"/>
        <icon src="images/icon/android-icon-48x48.png" density="mdpi"/>
        <icon src="images/icon/android-icon-72x72.png" density="hdpi"/>
        <icon src="images/icon/android-icon-96x96.png" density="xhdpi"/>
        <icon src="images/icon/android-icon-144x144.png" density="xxhdpi"/>
        <icon src="images/icon/android-icon-192x192.png" density="xxxhdpi"/>
    </platform>
    <platform name="ios">
        <icon src="images/icon/apple-icon-180x180.png" width="180" height="180"/>
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="images/icon/apple-icon-60x60.png" width="60" height="60"/>
        <icon src="images/icon/apple-icon-120x120.png" width="120" height="120"/>
        <!-- iPad -->
        <icon src="images/icon/apple-icon-76x76.png" width="76" height="76"/>
        <icon src="images/icon/apple-icon-152x152.png" width="152" height="152"/>
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon
        <icon src="images/icon/apple-icon-40x40.png" width="40" height="40"/>
        <icon src="images/icon/apple-icon-80x80.png" width="80" height="80"/>
        iPhone / iPod Touch -->
        <icon src="images/icon/apple-icon-57x57.png" width="57" height="57"/>
        <icon src="images/icon/apple-icon-114x114.png" width="114" height="114"/>
        <!-- iPad -->
        <icon src="images/icon/apple-icon-72x72.png" width="72" height="72"/>
        <icon src="images/icon/apple-icon-144x144.png" width="144" height="144"/>

        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <engine name="android" spec="~5.2.0"/>
    <engine name="ios" spec="~4.2.1"/>

</widget>
