<?xml version='1.0' encoding='utf-8'?>
<widget id="org.openenergymonitor.cydynni" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cyd Ynni</name>
    <description>
        Cyd Ynni app to show hydro status
    </description>
    <author email="david@inferiorplanet.co.uk" href="http://cydynni.org.uk/">
        David Hunnisett
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="http://cydynni.org.uk/*" />
    <allow-navigation href="http://cydynni.org.uk/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="images/icon/android-icon-36x36.png" />
        <icon density="mdpi" src="images/icon/android-icon-48x48.png" />
        <icon density="hdpi" src="images/icon/android-icon-72x72.png" />
        <icon density="xhdpi" src="images/icon/android-icon-96x96.png" />
        <icon density="xxhdpi" src="images/icon/android-icon-144x144.png" />
        <icon density="xxxhdpi" src="images/icon/android-icon-192x192.png" />
    </platform>
    <platform name="ios">
        <icon height="180" src="images/icon/apple-icon-180x180.png" width="180" />
        <icon height="60" src="images/icon/apple-icon-60x60.png" width="60" />
        <icon height="120" src="images/icon/apple-icon-120x120.png" width="120" />
        <icon height="76" src="images/icon/apple-icon-76x76.png" width="76" />
        <icon height="152" src="images/icon/apple-icon-152x152.png" width="152" />
        <icon height="57" src="images/icon/apple-icon-57x57.png" width="57" />
        <icon height="114" src="images/icon/apple-icon-114x114.png" width="114" />
        <icon height="72" src="images/icon/apple-icon-72x72.png" width="72" />
        <icon height="144" src="images/icon/apple-icon-144x144.png" width="144" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
        <preference name="EnableViewportScale" value="true"/>

    </platform>
    <engine name="android" spec="~5.2.0" />
    <engine name="ios" spec="~4.2.1" />
</widget>
