<?xml version='1.0' encoding='utf-8'?>
<widget id="org.openenergymonitor.cydynni" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cyd Ynni</name>
    <description>
      Cyd Ynni app to show hydro status
    </description>
    <author email="david@inferiorplanet.co.uk" href="http://lab.megni.co.uk/cydynni/">
        David Hunnisett
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="http://lab.megni.co.uk/cydynni/*" />
    <allow-navigation href="http://lab.megni.co.uk/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.0" />
    <engine name="ios" spec="~4.2.1" />
    <icon src="res/icon.png" />
</widget>
